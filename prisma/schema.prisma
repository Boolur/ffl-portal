// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  MANAGER
  LOAN_OFFICER
  DISCLOSURE_SPECIALIST
  VA
  QC
  PROCESSOR_JR
  PROCESSOR_SR
}

enum LoanStage {
  INTAKE
  DISCLOSURES_PENDING
  DISCLOSURES_SENT
  DISCLOSURES_SIGNED
  SUBMIT_TO_UW_PREP
  QC_REVIEW
  PROCESSING
  CONDITIONAL_APPROVAL
  CLEAR_TO_CLOSE
  CLOSED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum TaskPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  passwordHash  String?   // Nullable for SSO users later
  role          UserRole
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  loansAsLO        Loan[] @relation("LoanOfficer")
  loansAsProcessor Loan[] @relation("Processor")
  assignedTasks    Task[]
  auditLogs        AuditLog[]
  pipelineStages   PipelineStage[]
  pipelineNotes    PipelineNote[]
  externalUsers    ExternalUser[]
  leadMailboxLeads LeadMailboxLead[]
}

model Loan {
  id              String    @id @default(uuid())
  loanNumber      String    @unique // Internal ID
  borrowerName    String
  amount          Decimal   @db.Decimal(12, 2)
  program         String?   // e.g. "FHA 30yr Fixed"
  propertyAddress String?
  
  stage           LoanStage @default(INTAKE)
  pipelineStageId String?
  pipelineStage   PipelineStage? @relation(fields: [pipelineStageId], references: [id])
  
  // Assignments
  loanOfficerId   String
  loanOfficer     User      @relation("LoanOfficer", fields: [loanOfficerId], references: [id])
  
  processorId     String?
  processor       User?     @relation("Processor", fields: [processorId], references: [id])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  tasks           Task[]
  auditLogs       AuditLog[]
  pipelineNotes   PipelineNote[]
  leadMailboxLeads LeadMailboxLead[]

  @@index([loanOfficerId, pipelineStageId])
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  priority    TaskPriority @default(NORMAL)
  
  // A task belongs to a loan
  loanId      String
  loan        Loan       @relation(fields: [loanId], references: [id], onDelete: Cascade)

  // A task can be assigned to a specific user OR a role (pool)
  assignedUserId String?
  assignedUser   User?      @relation(fields: [assignedUserId], references: [id])
  assignedRole   UserRole?

  dueDate     DateTime?
  completedAt DateTime?

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model TaskTemplate {
  id           String    @id @default(uuid())
  stage        LoanStage
  title        String
  description  String?
  assignedRole UserRole
  dueOffsetDays Int      @default(1) // Due date = stage_start + days
}

model AuditLog {
  id        String   @id @default(uuid())
  loanId    String?
  loan      Loan?    @relation(fields: [loanId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String   // e.g. "STAGE_CHANGED", "TASK_COMPLETED"
  details   String?  // JSON or text
  createdAt DateTime @default(now())
}

model ExternalUser {
  id          String   @id @default(uuid())
  provider    String
  externalId  String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())

  @@unique([provider, externalId])
  @@index([userId])
}

model LeadMailboxLead {
  id          String   @id @default(uuid())
  leadId      String   @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  loanId      String
  loan        Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  payload     Json
  receivedAt  DateTime @default(now())

  @@index([userId, receivedAt])
}

model PipelineStage {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  name        String
  order       Int
  color       String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  loans       Loan[]

  @@index([userId, order])
}

model PipelineNote {
  id        String   @id @default(uuid())
  loanId    String
  loan      Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  body      String
  createdAt DateTime @default(now())

  @@index([loanId, createdAt])
}
